                <Entry x:Name="txtphone" Placeholder="Phone Number"/>
                <Entry x:Name="txtemail" Placeholder="Email"/>
                <Entry x:Name="txtpass" Placeholder="Password"/>
                
                <Button x:Name="btnsignup" Text="SIGN UP" WidthRequest="150" HorizontalOptions="CenterAndExpand" BackgroundColor="Black" TextColor="White" FontSize="Medium" Clicked="signup"/>
                
